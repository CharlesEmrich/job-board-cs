@{
  Layout="Shared/_Layout.cshtml";
}

@if ( Model.Count > 0 ) {
  <h1>Job List</h1>
  <ul>
    @foreach(var posting in Model)
    {
      <li><a href="/jobs/@posting.GetId()">@posting.GetTitle()</a></li>
    }
  </ul>
} else {
  <h2>No jobs yet, sorry!</h2>
}
<p><a href="/jobs/new">Add a job</a></p>
<form action="/jobs/cleared" method="post">
  <button type="submit" name="button">Clear All Jobs</button>
</form>
